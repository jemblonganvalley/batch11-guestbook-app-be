generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// model guests
model guests {
  id            Int           @id @default(autoincrement())
  name          String
  address       String
  message       String
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
}
